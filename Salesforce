package pages;

import java.io.IOException;

import org.openqa.selenium.WebDriver;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.ExtentTest;

import uistore.Locators;
import utils.ExcelReader;
import utils.LoggerHandler;
import utils.Screenshot;
import utils.WebDriverHelper;

public class Page {

    ExtentReports reports;
    WebDriverHelper helper;
    ExtentTest test;
    WebDriver driver;

    public Page(WebDriver driver, ExtentReports reports) {
        this.driver = driver;
        this.reports = reports;
        helper = new WebDriverHelper(driver);
        test = reports.createTest("hi");
    }

    public void Testcase1() throws IOException {
        String h1 = ExcelReader.readdata("testdata/Data.xlsx", "Sheet1", 0, 0);
        String h2 = ExcelReader.readdata("testdata/Data.xlsx", "Sheet1", 1, 0);

        helper.clickOnElement(Locators.user);
        helper.sendKeys(Locators.user, h1);

        helper.clickOnElement(Locators.pass);
        helper.sendKeys(Locators.pass, h2);

        helper.clickOnElement(Locators.me);
        helper.clickOnElement(Locators.login);
        helper.clickOnElement(Locators.fgt);

        LoggerHandler.initLog4j();
        LoggerHandler.logInfo("Ok");

        Screenshot.getScreenShot(driver, "screenshot/img.png");
    }
}





package runner;


import java.io.IOException;
import java.net.MalformedURLException;

import org.testng.annotations.AfterClass;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import com.aventstack.extentreports.ExtentReports;

import pages.Page;
import utils.Base;
import utils.Reporter;
import utils.Screenshot;

public class TestRunner extends Base{
    ExtentReports reports;
    Page p;

    @BeforeClass
    public void genReport() {
        reports = Reporter.generateExtentReport("salesforce_report");
    }

    @BeforeMethod
    public void launchBrowser() throws MalformedURLException {
        openBrowser();
        p = new Page(driver,reports);
        
    }
    
    @Test
    public void testOne() throws IOException {
        p.Testcase1();
        Screenshot.getScreenShot(driver, "screenshot/img.png");

    }
    
    @AfterMethod
    public void tearDown() {
        driver.quit();
    }

    @AfterClass
    public void finalReport() {
        reports.flush();
    }
}




package uistore;

import org.openqa.selenium.By;

public class Locators {
    public static By user = By.xpath("/html/body/div[1]/div[1]/div/div/div[2]/div[3]/form/div[1]/div/input[1]");
    public static By pass = By.xpath("/html/body/div[1]/div[1]/div/div/div[2]/div[3]/form/input[1]");
    public static By me = By.xpath("/html/body/div[1]/div[1]/div/div/div[2]/div[3]/form/div[3]/label");
    public static By login = By.xpath("/html/body/div[1]/div[1]/div/div/div[2]/div[3]/form/input[2]");
    public static By fgt = By.xpath("/html/body/div[1]/div[1]/div/div/div[2]/div[3]/div/a[1]");
}
